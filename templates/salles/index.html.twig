{% extends 'base.html.twig' %}

{% block body %}

    <p>{{ nombreDisciplines}} {{ secteur }}</p>

<p> <a href="{{ path('disciplines.new')}}">Ajouter</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for disciplines in disciplines %}
            <tr>
                <td>{{ disciplines.nomDiscipline }}</td>
                <td>
                    {% if disciplines.isActive %}
                        <span class="badge bg-success">Actif</span>
                        <a href="{{ path('disciplines.toggle_statut', { id: disciplines.id }) }}" class="btn btn-danger btn-sm">
                            Désactiver
                        </a> 
                    {% else %}
                          <span class="badge bg-danger">Inactif</span>
                        <a href="{{ path('disciplines.toggle_statut', { id: disciplines.id }) }}" class="btn btn-success btn-sm">
                            Activer
                        </a>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('disciplines.show', { id: disciplines.id }) }}" class="btn btn-primary btn-sm">Voir</a>
                    <a href="{{ path('disciplines.edit', { id: disciplines.id }) }}" class="btn btn-secondary btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucune disciplines trouvée.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
