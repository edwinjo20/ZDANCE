{% extends 'base.html.twig' %}

{% block title %}Détails de la Discipline - Administration{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">Détails de la Discipline</h1>
            <a href="{{ path('salles.index') }}" class="btn btn-outline-primary mb-4">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            {% if discipline is not empty %}
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row">
                            <!-- Photo de la discipline -->
                            <div class="col-md-4 text-center">
                                {% if discipline.photoDiscipline %}
                                    <img src="{{ asset('uploads/salles/' ~ discipline.photoDiscipline) }}" 
                                         alt="{{ discipline.nomDiscipline }}" 
                                         class="img-fluid rounded mb-3">
                                {% else %}
                                    <div class="bg-light p-5 rounded">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                        <p class="mt-2">Aucune photo disponible</p>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Détails de la discipline -->
                            <div class="col-md-8">
                                <h2 class="card-title">{{ discipline.nomDiscipline }}</h2>
                                <p class="card-text">
                                    <strong>Description :</strong><br>
                                    {{ discipline.descriptionDiscipline }}
                                </p>
                                <p class="card-text">
                                    <strong>Statut :</strong>
                                    {% if discipline.isActive %}
                                        <span class="badge bg-success">Activée</span>
                                    {% else %}
                                        <span class="badge bg-danger">Désactivée</span>
                                    {% endif %}
                                </p>

                                <!-- Vidéo de la discipline -->
                                {% if discipline.videoDiscipline %}
                                    <div class="mt-4">
                                        <strong>Vidéo :</strong>
                                        <div class="ratio ratio-16x9">
                                            <iframe src="{{ discipline.videoDiscipline }}" 
                                                    title="Vidéo de la discipline" 
                                                    allowfullscreen></iframe>
                                        </div>
                                    </div>
                                {% endif %}

                                <!-- Bouton de modification -->
                                <div class="mt-4">
                                    <a href="{{ path('disciplines.edit', { id: discipline.id }) }}" 
                                       class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    Aucune discipline trouvée.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}